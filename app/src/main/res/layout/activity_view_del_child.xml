<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserUI.ViewDelChild">


    <!--Header-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child Info"
        tools:ignore="HardcodedText"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        />


    <EditText
        android:id="@+id/ChildViewSearch"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="35dp"
        android:hint="Enter name"
        tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/childrenView"
            android:layout_marginHorizontal="10dp"
            android:layout_weight=".5"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:text="View"
            tools:ignore="HardcodedText" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/childrendel"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:layout_weight=".5"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:text="Delete Child"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/displayChild"/>



</LinearLayout>