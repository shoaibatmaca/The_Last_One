<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DoctorUI.DoctorProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/profle1"
            android:layout_gravity="start"
            android:id="@+id/setimage"
            android:layout_marginStart="20dp"
            app:civ_border_color="@color/main"
            app:civ_border_width="2dp"
            android:layout_marginTop="40dp"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/picImage"
            android:src="@drawable/camera1"
            android:backgroundTint="@color/main"
            android:background="@drawable/imagebutton"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-40dp"
            app:civ_circle_background_color="@color/blue"
            android:layout_gravity="start"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profilemail"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            tools:ignore="HardcodedText" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp"
            android:layout_marginHorizontal="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:layout_marginStart="35dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/edname"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age:"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:layout_marginStart="35dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/age"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:layout_marginStart="35dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/edaddress"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Specification:"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Specification"
                    android:layout_marginStart="35dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/edspecification"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qualification:"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Qualification"
                    android:layout_marginStart="35dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/edqualification"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disdcription:"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disdcription"
                    android:layout_marginStart="35dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/eddisdcription"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RegistrationNo:"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RegistrationNo"
                    android:layout_marginStart="35dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/edregistrationNo"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:weightSum="1">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight=".5"
                    android:text="Upload"
                    android:elevation="30dp"
                    android:id="@+id/upload"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight=".5"
                    android:backgroundTint="@color/white"
                    android:text="Logout"
                    android:layout_marginStart="7dp"
                    android:elevation="30dp"
                    android:background="@drawable/custom_edittext"
                    android:id="@+id/logout"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />


    </LinearLayout>

    </LinearLayout>

</ScrollView>
